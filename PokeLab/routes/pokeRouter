//  Create a get route /pokemon that will res.status(200).json(pokemon), which will display your pokemon data as json in the browser.


 const express = require("express")
 const pokemon = require("../pokemonapp/pokemon")
//  const middleware = require("../middleware/middleware")

 const pokeRouter = express.Router()


pokeRouter.get("/", (req, res)=>{

    for(let i=0; i<pokemon.length;i++){
        console.log(pokemon[i].name)
        }

    for(let i=0; i<pokemon.length;i++){
        console.log(pokemon[i].name.charAt(0).toUpperCase()+pokemon[i].name.slice(1))
        }

    for(let i=0; i<pokemon.length;i++){
        console.log(pokemon[i].img + ".jpg")
        }


    res.status(200).json({Pokemon: pokemon})
    console.log(pokemon)
})


module.exports = pokeRouter
